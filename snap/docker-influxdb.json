{
    "version": 1,
    "schedule": {
        "type": "simple",
        "interval": "1s"
    },
    "max-failures": 10,
    "workflow": {
        "collect": {
            "metrics": {
                "/intel/docker/*/stats/cgroups/cpu_stats/cpu_usage/total_usage": {},
                "/intel/docker/*/stats/cgroups/memory_stats/usage/usage": {}
            },
            "process": null,
            "publish": [
                {
                    "plugin_name": "influx",                            
                    "config": {
                        "host": "127.0.0.1",
                        "port": 8086,
                        "database": "snap",
                        "user": "admin",
                        "password": "admin"
                    }
                }
            ]                                            
        }
    }
}
